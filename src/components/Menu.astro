---
import menu from "../menu.json";
---

<section class="section" id="menu">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-xs-12 offset-lg-3 offset-md-3">
        <div class="section-heading text-center">
          <h2 class="fancy">Catering Menu</h2>
        </div>
      </div>
    </div>

    {
      menu.map((section, index) => (
        <div class="menu-section mb-4">
          <div class="row">
            <div class="col-12">
              <h3 class="text-left mb-3 mt-3">{section.title}</h3>
            </div>
          </div>

          <div class="row">
            {section.items.map((item) => (
              <div class="col-lg-4 col-md-6 mb-3">
                <div class="menu-item-card shadow-sm h-100">
                  <div class="menu-item-content p-3">
                    <h5 class="mb-1 font-weight-bold">{item.title}</h5>
                    {item.desc && (
                      <p class="text-muted mb-0 small">{item.desc}</p>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>

          {index < menu.length - 1 && (
            <div class="row">
              <div class="col-12">
                <hr class="menu-divider" />
              </div>
            </div>
          )}
        </div>
      ))
    }

    <div class="row mt-3">
      <div class="col-12">
        <div class="menu-notes p-2 text-center">
          <p class="mb-1 small">
            ***Lilly May's works to use local vendors and products whenever
            possible. Therefore all menu items listed are subject to change
            based on seasonality and availability.
          </p>
          <p class="mb-0 small">
            ***Inquiries for events of 20 or more people made less than a month
            before the event date will automatically have a 15% rush order fee
            added to the Invoice.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .menu-item-card {
    transition: all 0.3s ease;
    border-left: 2px solid transparent;
    background-color: #fff;
    border-radius: 3px;
    overflow: hidden;
  }

  .menu-item-card:hover {
    border-left: 2px solid #fb5849;
    transform: translateY(-3px);
  }

  .menu-divider {
    height: 1px;
    background: linear-gradient(
      to right,
      rgba(251, 88, 73, 0),
      rgba(251, 88, 73, 0.5),
      rgba(251, 88, 73, 0)
    );
    margin: 10px auto;
  }

  .menu-notes {
    color: #2a2a2a;
    line-height: 1.4;
  }

  .fancy {
    font-family: "Dancing Script", cursive;
    font-size: 36px;
    margin-bottom: 15px;
  }

  .section-heading h6 {
    position: relative;
    font-size: 15px;
    color: #fb5849;
    font-weight: 500;
    letter-spacing: 2px;
    text-transform: uppercase;
    padding-left: 40px;
  }

  .section-heading h6:before {
    width: 30px;
    height: 1px;
    content: "";
    position: absolute;
    left: 0;
    top: 8px;
    background-color: #fb5849;
  }

  #menu h3 {
    color: #2a2a2a;
    font-size: 22px;
    font-weight: 700;
  }

  #menu h5 {
    font-size: 16px;
    color: #2a2a2a;
  }

  #menu p.small {
    font-size: 13px;
    line-height: 1.4;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .col-lg-4.col-md-6 {
      padding-left: 8px;
      padding-right: 8px;
    }

    .menu-item-card {
      margin-bottom: 10px;
    }

    .menu-item-content {
      padding: 10px !important;
    }

    .fancy {
      font-size: 28px;
    }
  }
</style>
