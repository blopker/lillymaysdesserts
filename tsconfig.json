{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "types": ["@types/gtag.js", "@types/node"],
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "scripts/**/*"]
}
